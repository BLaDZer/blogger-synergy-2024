{% set user_is_post_owner = user.id == post.user.id %}

<div class="row justify-content-center mb-2">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                {% if user_is_post_owner %}
                    <div class="card-title text-muted">{{ __('post.card_user_name_you') }}</div>
                {% else %}
                    <div class="card-title">
                        <a href="{{ route('user.profile', {'user_id': post.user.id}) }}">{{ post.user.name }}</a>
                    </div>
                {% endif %}

                <div class="card-subtitle mb-3">
                    <a class="text-muted" href="{{ route('posts.view', {'post_id': post.id}) }}" style="cursor: pointer;">{{ post.created_at|date('d.m.Y H:i') }}</a>
                </div>

                <p class="card-text">
                    {% if user_is_post_owner or not post.is_hidden or user.isSubscribedTo(post.user) %}
                        {{ post.message }}

                        <div class="post-tags-container">
                            {% for tag in post.tags %}
                                <a href="{{ route('feed') }}?tag={{ tag.id }}">#{{ tag.title }}</a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-muted">
                            <{{ __('post.card_content_hidden') }}>
                        </div>

                        <a href="{{ route('user.subscribe', {'user_id': post.user.id}) }}" class="btn btn-secondary">{{ __('post.card_subscribe_to_get_content_button') }}</a>
                    {% endif %}
                </p>

                {% if user_is_post_owner %}
                    <a href="{{ route('posts.edit.form', {'post_id': post.id}) }}" class="card-link">{{ __('post.card_edit_button') }}</a>
                    <a href="{{ route('posts.remove', {'post_id': post.id}) }}" class="card-link">{{ __('post.card_remove_button') }}</a>
                {% endif %}

                {% if with_comments is defined and with_comments %}
                    <div class="card-footer">
                        {% include('posts/partial/comments_container') %}

                        <div class="mt-3">
                            <form method="POST" action="{{ route('posts.comment.new', {'post_id': post.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token() }}" />

                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <textarea type="text" class="form-control" id="message" name="message"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-secondary">{{ __('post.card_create_comment_button') }}</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
